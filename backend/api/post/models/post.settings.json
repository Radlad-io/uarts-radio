{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "name": "post",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true,
    "previewable": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "scheduled": {
      "type": "datetime"
    },
    "featured": {
      "type": "boolean"
    },
    "description": {
      "type": "text"
    },
    "cover_image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "editors": {
      "plugin": "users-permissions",
      "collection": "user",
      "via": "edited",
      "dominant": true
    },
    "authors": {
      "plugin": "users-permissions",
      "collection": "user",
      "via": "authored",
      "dominant": true
    },
    "photographers": {
      "plugin": "users-permissions",
      "collection": "user",
      "via": "photography",
      "dominant": true
    },
    "show": {
      "model": "show",
      "via": "episodes"
    },
    "tags": {
      "collection": "tag",
      "via": "posts"
    },
    "content": {
      "type": "dynamiczone",
      "components": [
        "content.paragraph",
        "content.block-quote",
        "content.featured-staff",
        "content.video-embed",
        "content.carousel",
        "content.featured-posts"
      ],
      "min": 1
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "Article",
        "Podcast",
        "Video",
        "Event",
        "Exhibition",
        "Interview",
        "Opinion"
      ],
      "required": true,
      "default": "Article"
    }
  }
}
